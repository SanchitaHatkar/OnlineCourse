@using OnlineCourseRegistration.ViewModel
@model List<ListOfStudentViewModel>

<div class="container mt-3 form-control">
	<h3> Admission List </h3>
	<div> <a asp-controller="Student" asp-action="Register">Add Student</a></div>
	<hr /> 
		<table class="table table-bordered table-stripped">
			<thead>
				<tr>
					<th>ID</th>
					<th>StudentName</th>
					<th>DOB</th>
					<th>Email</th>
					<th>Address</th>
				<th>Course</th>
				<th>Gender</th>
				<th>contactno</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.StudentName</td>
					<td>@item.DOB</td>
					<td>@item.Email</td>
						<td>@item.Address</td>
						<td>@item.CourseName</td>
					<td>@item.Gender</td>
					<td>@item.Contactno</td>
					<td>
						<a asp-action="Edit" asp-controller="Student" asp-route-id="@item.Id">Edit</a>
						<a asp-action="Delete" asp-controller="Student" asp-route-id="@item.Id">Delete</a>
					</td>
					</tr>
				}
			</tbody>
		</table> 
</div>
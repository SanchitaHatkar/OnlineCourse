@using OnlineCourseRegistration.ViewModel
@model List<CreateCourseViewModel>

<div class="container mt-3 form-control">
	<h3> List of Courses </h3>
	<div> <a asp-controller="Course" asp-action="Create">Add Course</a></div>
	<hr /> 
		<table class="table table-bordered table-stripped">
			<thead>
				<tr>
					<th>ID</th>
					<th>Course Name</th> 
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.ID</td>
						<td>@item.Name</td> 
					<td>
						<a asp-action="Edit" asp-controller="Course" asp-route-id="@item.ID">Edit</a>
						<a asp-action="Delete" asp-controller="Course" asp-route-id="@item.ID">Delete</a>
					</td>
					</tr>
				}
			</tbody>
		</table> 
</div>